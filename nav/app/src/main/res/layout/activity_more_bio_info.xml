<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".moreBioInfo">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/profile_icon3" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="261dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ageinput"
                style="Lato"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center"
                android:hint="Your age"
                android:inputType="number|numberDecimal"
                android:lineSpacingMultiplier="0.86"
                android:textColor="#FF8190A5"
                android:textSize="25.5sp"
                tools:layout_editor_absoluteX="161dp"
                tools:layout_editor_absoluteY="514dp" />

            <TextView
                android:id="@+id/agetextView"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#717171"
                android:gravity="center"
                android:text="y"
                android:textSize="35dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/currentweightinput"
                style="Lato"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center"
                android:hint="Your start weight"
                android:inputType="number|numberDecimal"
                android:lineSpacingMultiplier="0.86"
                android:textColor="#FF8190A5"
                android:textSize="25.5sp"
                tools:layout_editor_absoluteX="161dp"
                tools:layout_editor_absoluteY="514dp" />
            <TextView
                android:id="@+id/textView155"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#717171"
                android:gravity="center"
                android:text="kg"
                android:textSize="35dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/goalweightinput"
                style="Lato"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center"
                android:hint="Your goal weight"
                android:inputType="number|numberDecimal"
                android:lineSpacingMultiplier="0.86"
                android:textColor="#FF8190A5"
                android:textSize="25.5sp"
                tools:layout_editor_absoluteX="161dp"
                tools:layout_editor_absoluteY="514dp" />
            <TextView
                android:id="@+id/textView15"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#717171"
                android:gravity="center"
                android:text="kg"
                android:textSize="35dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/heightinput"
                style="Lato"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center"
                android:hint="Your height"
                android:inputType="number|numberDecimal"
                android:lineSpacingMultiplier="0.86"
                android:textColor="#FF8190A5"
                android:textSize="25.5sp"
                tools:layout_editor_absoluteX="161dp"
                tools:layout_editor_absoluteY="514dp" />
            <TextView
                android:id="@+id/textView24"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#717171"
                android:gravity="center"
                android:text="cm"
                android:textSize="35dp" />



        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.807">

        <Button
            android:id="@+id/LastStep3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_register"
            android:text="BACK"
            android:textColor="#717171"
            android:textSize="18dp"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="476dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1.0"/>

        <Button
            android:id="@+id/NextStep3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_register"
            android:text="NEXT"
            android:textColor="#717171"
            android:textSize="18dp"
            tools:layout_editor_absoluteX="256dp"
            tools:layout_editor_absoluteY="473dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>