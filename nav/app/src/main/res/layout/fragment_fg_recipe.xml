<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fg_recipe">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">


        <TextView
            android:id="@+id/eaten"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Find your recipes"
            android:textColor="@color/white"
            android:background="#77CE92"
            android:textSize="30dp">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/breakfastr"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="205dp"
                    android:paddingLeft="30dp"
                    android:paddingTop="30dp"
                    android:layout_height="265dp"
                    android:drawableTop="@drawable/recipe_1">

                </Button>

                <Button
                    android:id="@+id/lunchr"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="205dp"
                    android:paddingTop="30dp"
                    android:layout_height="265dp"
                    android:layout_gravity="center"
                    android:drawableTop="@drawable/recipe_3"
                    ></Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <Button
                    android:id="@+id/dinnerr"
                    android:paddingLeft="30dp"

                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="205dp"
                    android:layout_height="265dp"
                    android:drawableTop="@drawable/recipe_2"
                    android:layout_gravity="center"></Button>

                <Button
                    android:id="@+id/snackr"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="205dp"
                    android:layout_height="265dp"

                    android:drawableTop="@drawable/recipe_4"
                    android:layout_gravity="center"></Button>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>