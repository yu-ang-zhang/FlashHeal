<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fg_recipe">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0">

        <TableRow android:paddingTop="20dp"
            android:background="#8BC34A"
            >
            <TextView
                android:id="@+id/eaten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="find your recipes"
                android:textSize="30dp"
                android:paddingBottom="20dp"
                ></TextView>
        </TableRow>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="572dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BREAKFAST    LUNCH"
                android:textSize="30dp"></TextView>

            <TableRow
                android:layout_marginBottom="20dp"
                >
                <Button
                    android:id="@+id/breakfastr"
                    android:layout_width="170dp"
                    android:layout_height="200dp"
                    android:drawableTop="@drawable/adding"
                    android:text="banana\n669KJ"
                    android:layout_marginRight="20dp"
                    android:textSize="15dp"></Button>

                <Button
                    android:id="@+id/lunchr"
                    android:layout_width="170dp"
                    android:layout_height="200dp"
                    android:drawableTop="@drawable/adding"
                    android:text="banana\n669KJ"
                    android:textSize="15dp"></Button>
            </TableRow>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DINNER           SNACK"
                android:textSize="30dp"></TextView>


            <TableRow>

                <Button
                    android:id="@+id/dinnerr"
                    android:layout_width="170dp"
                    android:layout_height="200dp"
                    android:drawableTop="@drawable/adding"
                    android:text="salad\n1169KJ"
                    android:layout_marginRight="20dp"
                    android:textSize="15dp"></Button>
                <Button
                    android:id="@+id/snackr"
                    android:layout_width="170dp"
                    android:layout_height="200dp"
                    android:drawableTop="@drawable/adding"
                    android:text="salad\n1169KJ"
                    android:layout_marginRight="20dp"
                    android:textSize="15dp"></Button>
            </TableRow>

        </TableLayout>

    </TableLayout>

</FrameLayout>