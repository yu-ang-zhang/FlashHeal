<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".breakfast">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:stretchColumns="1">

        <TableRow android:paddingTop="20dp"
            android:background="#77CE92"
            >

            <ImageButton
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#00FFFFFF"
                android:src="@drawable/ic_action_back"></ImageButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="BREAKFAST"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:paddingBottom="20dp"
                ></TextView>

            <ImageButton
                android:id="@+id/add"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:layout_marginTop="-5dp"
                android:scaleType="fitXY"
                android:src="@drawable/add2"
                android:backgroundTint="#00FFFFFF"
                ></ImageButton>
        </TableRow>
    </TableLayout>


        <TextView
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/textview_style"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="RECENT"
            android:textSize="25dp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:textSize="20dp"
                android:textColor="#717171"
                android:text="meal name"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:textSize="20dp"
                android:text="foods and weights"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="calories"></TextView>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/rname"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/rfandw"
                android:layout_width="196dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/rcalories"
                android:layout_width="99dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20dp"></TextView>
        </TableRow>
    </LinearLayout>

        <TextView
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/textview_style"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="FAVOURITE"
            android:textSize="25dp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:textSize="20dp"
                android:text="meal name"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:textSize="20dp"
                android:text="foods and weights"></TextView>
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="calories"></TextView>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/name"
                android:layout_width="113dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/fandw"
                android:layout_width="196dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/calories"
                android:layout_width="99dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20dp"></TextView>
        </TableRow>        
    </LinearLayout>
</LinearLayout>